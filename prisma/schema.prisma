generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Plan {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  planName    String
  price       Float
  discount    Float
  last_price  Float
  description String
  features    Json
  planId      String // This field will store the Razorpay plan ID
  User        User[]
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
}

enum order_status {
  pending
  accepted
  rejected
}

enum userRole {
  admin
  user
}

model Order {
  id                  String       @id @default(auto()) @map("_id") @db.ObjectId
  name                String
  pricing_plan        String
  status              order_status
  User                User?        @relation(fields: [userId], references: [id])
  userId              String?      @db.ObjectId
  created_at          DateTime     @default(now())
  updated_at          DateTime     @updatedAt
  razorpay_payment_id String?
  razorpay_order_id   String?
}

model User {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  username       String
  role           userRole
  phone          String?  @unique
  email          String   @unique
  password       String
  plan           Plan?    @relation(fields: [planId], references: [id])
  planId         String?  @db.ObjectId
  orders         Order[]
  instagram_id   String?
  city           String?
  subscriptionId String?
  subs_status    String?
  created_at     DateTime @default(now())
  updated_at     DateTime @updatedAt
}

model Subscription {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  subscriptionId String
  planId         String
  customerNotify Int
  quantity       Int
  totalCount     Int
  startAt        DateTime
  status         String
  addons         Json
  notes          Json
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Payment {
  id                       String   @id @default(auto()) @map("_id") @db.ObjectId
  razorpay_payment_id      String
  razorpay_subscription_id String
  razorpay_signature       String
  createdAt                DateTime @default(now())
  updatedAt                DateTime @updatedAt
}
