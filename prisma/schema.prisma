generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Plan {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  planName    String
  price       Float
  description String
  features    Json
}

enum order_status {
  pending
  accepted
  rejected
}

model Order {
  id           String       @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  pricing_plan String
  created_at   DateTime
  status       order_status
}
